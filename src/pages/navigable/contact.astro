<script>
  document.addEventListener("DOMContentLoaded", () => {
    const buttonScrollToContact = document.getElementById(
      "button-hero-contact",
    );
    buttonScrollToContact?.addEventListener("click", () => {
      const contactAnchor = document.getElementById("contact-anchor");
      contactAnchor?.scrollIntoView({ behavior: "smooth" });
    });

    const placeholder = document.getElementById("map-placeholder");
    const loadBtn = document.getElementById("load-map-btn");
    
    const loadMap = () => {
      const iframe = document.createElement("iframe");
      iframe.title = "Posizione geografica dello Studio Messini";
      iframe.className = "rounded-4xl w-xs lg:w-md aspect-square";
      iframe.src =
        "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2989.6860474618925!2d12.90409267661424!3d41.4677241910074!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x13250c7d7aeccc0f%3A0x41621e0efb0439ab!2sDott.ssa%20Liana%20Messini%2C%20Logopedista!5e0!3m2!1sit!2sit!5m2!1sit!2sit";
      iframe.style.border = "0";
      iframe.loading = "lazy";
      iframe.referrerPolicy = "no-referrer-when-downgrade";
      iframe.allowFullscreen = true;
      
      placeholder?.replaceWith(iframe);
    };

    loadBtn?.addEventListener("click", loadMap);
  });
</script>